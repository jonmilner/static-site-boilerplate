{
  "name": "static-site-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for new static web projects.",
  "scripts": {
    "clean": "rm -rf dist",
    "lint:css": "stylelint 'assets/css/**/*.css' || true",
    "prebuild": "npm run clean -s",
    "prebuild:css": "npm run lint:css",
    "build": "run-p build:css build:images build:html build:js",
    "build:css": "run-p build:css:postcss build:css:styleguide",
    "build:css:postcss": "postcss -c postcss.config.json",
    "build:css:styleguide": "kss --source 'assets/css' --destination 'dist/styleguide/' --custom dark --builder 'styleguide' --homepage 'styleguide.md' --title 'Style Guide' --nav-depth 2",
    "build:html": "pug templates/*.pug -o dist --pretty",
    "build:images": "imagemin assets/img dist/assets/img -p",
    "build:js": "webpack",
    "build:js:minified": "BUILD_ENV=production npm run build:js",
    "watch": "run-p watch:css watch:html watch:images watch:js",
    "watch:css": "onchange 'assets/css/**/*.css' 'assets/styleguide/index.hbs' 'assets/css/styleguide.md' -- npm run build:css",
    "watch:html": "onchange 'templates/**/*' -- npm run build:html",
    "watch:images": "onchange 'assets/img/**/*' -- npm run build:images",
    "watch:js": "onchange 'assets/js/**/*' -- npm run build:js",
    "serve": "browser-sync start --s 'dist' --f 'dist' --startPath 'styleguide' --no-notify --no-ui",
    "start": "npm-run-all build -p serve watch --silent",
    "predeploy": "npm run build:js:minified",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "github.com/jonmilner/static-site-boilerplate"
  },
  "author": "Jon Milner <email@jonmilner.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.13.0",
    "cssnano": "^3.7.3",
    "gh-pages": "^0.11.0",
    "imagemin-cli": "^2.1.0",
    "kss": "^3.0.0-beta.14",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.5.0",
    "postcss": "^5.0.20",
    "postcss-apply": "^0.2.0",
    "postcss-assets": "^4.1.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-custom-properties": "^5.0.1",
    "postcss-font-magician": "^1.4.0",
    "postcss-import": "^8.1.2",
    "postcss-initial": "^1.5.1",
    "postcss-inline-svg": "^2.0.1",
    "postcss-mixins": "^4.0.2",
    "postcss-nested": "^1.0.0",
    "postcss-pxtorem": "^3.3.1",
    "postcss-reporter": "^1.3.3",
    "precss": "^1.4.0",
    "pug": "^2.0.0-beta3",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^7.1.0",
    "stylelint-config": "git://github.com/jonmilner/stylelint-config.git",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "cq-prolyfill": "^0.3.2",
    "fastclick": "^1.0.6",
    "jquery": "^2.2.4",
    "normalize.css": "^4.1.1",
    "prismjs": "^1.5.1",
    "sanitize.css": "^4.1.0"
  }
}
