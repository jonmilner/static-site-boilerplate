{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "description": "My personal boilerplate for new web projects.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -f dist/*",
    "serve": "browser-sync start --server --serveStatic dist --files 'dist/*.css, dist/*.js, dist/**/*.html, !node_modules/**/*.html'",
    "build:css": "postcss -c postcss.config.json",
    "build:js": "webpack",
    "build:html": "pug src/views/*.pug -o dist --pretty",
    "build:all": "npm-run-all -p build:css build:js build:html",
    "watch:css": "onchange 'src/css/*.css' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch:html": "onchange 'src/**/*.pug' -- npm run build:html",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:html",
    "start": "npm run clean && npm run build:all && npm run watch:all",
    "postinstall": "npm run start"
  },
  "repository": {
    "type": "git",
    "url": "github.com/jonmilner/jon-boilerplate"
  },
  "author": "Jon Milner <email@jonmilner.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.12.5",
    "npm-run-all": "^1.8.0",
    "onchange": "^2.4.0",
    "postcss": "^5.0.20",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-hexrgba": "^0.2.0",
    "postcss-import": "^8.1.0",
    "postcss-reporter": "^1.3.3",
    "precss": "^1.4.0",
    "pug": "^2.0.0-alpha6",
    "pug-cli": "^1.0.0-alpha1",
    "stylelint": "^6.2.2",
    "stylelint-config": "git+ssh://git@github.com/jonmilner/stylelint-config.git",
    "stylelint-config-standard": "^6.0.0"
    "webpack": "^1.13.0"
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "jquery": "^2.2.3",
    "normalize.css": "^4.1.1"
  }
}
