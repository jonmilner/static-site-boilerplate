{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for new static web projects.",
  "scripts": {
    "clean": "rm -rf dist",
    "serve": "browser-sync start --s --ss 'dist' --f 'dist/**/*' --no-notify --no-ui",
    "lint:css": "stylelint 'src/css/**/*.css' || true",
    "build:styleguide": "kss --source 'src/css' --destination 'dist/styleguide/' --builder 'src/styleguide' --homepage 'src/styleguide/homepage.md' --title 'Style Guide'",
    "build:images": "imagemin src/img dist/img -p",
    "build:css": "npm run lint:css && postcss -c postcss.config.json",
    "build:js": "webpack",
    "build:html": "pug src/views/*.pug -o dist --pretty",
    "build:all": "parallelshell 'npm run build:styleguide' 'npm run build:images' 'npm run build:css' 'npm run build:js' 'npm run build:html'",
    "watch:styleguide": "onchange 'src/css/**/*' 'src/styleguide/**/*' -- npm run build:styleguide",
    "watch:images": "onchange 'src/img/**/*' -- npm run build:images",
    "watch:css": "onchange 'src/css/**/*' -- npm run build:css",
    "watch:js": "onchange 'src/js/**/*' -- npm run build:js",
    "watch:html": "onchange 'src/views/**/*' -- npm run build:html",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:styleguide' 'npm run watch:images' 'npm run watch:css' 'npm run watch:js' 'npm run watch:html'",
    "start": "npm run clean && npm run build:all && npm run watch:all",
    "postinstall": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "github.com/jonmilner/jon-boilerplate"
  },
  "author": "Jon Milner <email@jonmilner.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.12.5",
    "imagemin-cli": "^2.1.0",
    "kss": "^3.0.0-beta.9",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.20",
    "postcss-apply": "^0.2.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-hexrgba": "^0.2.0",
    "postcss-import": "^8.1.0",
    "postcss-reporter": "^1.3.3",
    "precss": "^1.4.0",
    "pug": "^2.0.0-alpha6",
    "pug-cli": "^1.0.0-alpha1",
    "stylelint": "^6.2.2",
    "stylelint-config": "git+ssh://git@github.com/jonmilner/stylelint-config.git",
    "webpack": "^1.13.0"
  },
  "dependencies": {
    "cq-prolyfill": "^0.3.2",
    "fastclick": "^1.0.6",
    "jquery": "^2.2.3",
    "normalize.css": "^4.1.1"
  }
}
